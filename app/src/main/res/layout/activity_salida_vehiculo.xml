<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.giparking.appgiparking.view.SalidaVehiculoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salida de Vehiculo"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Placa"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_placa"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="[Info]"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Hora de Ingreso"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_hora_ingreso"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="[Info]"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Hora de Salida"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_hora_salida"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="[Info]"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione Producto"
        android:textSize="14dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorBlack"
        android:gravity="left"/>

    <Spinner
        android:id="@+id/sp_producto"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_disenio_general"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Validacion Automatica"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Con el comprobante de consumo)"
                android:layout_gravity="center"
                android:textSize="12dp"
                android:textColor="@color/colorBlack"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Validacion Manual"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Segun convenio de establecimiento)"
                android:layout_gravity="center"
                android:textSize="12dp"
                android:textColor="@color/colorBlack"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sin validacion"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Tarifa normal)"
                android:layout_gravity="center"
                android:textSize="12dp"
                android:textColor="@color/colorBlack"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
